<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <agency.tango.android.avatarview.views.AvatarView
        android:id="@+id/avatarView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:av_border_width="15dp"
        app:av_text_size_percentage="35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/llMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/avatarView"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Larissa" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMentorshipAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="Available to mentor and be a mentee" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvInterests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="14sp"
            tools:text="Interests: Web Dev, LinkedIn Optimization" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
